[Unit]
Description=Todo Backend (Flask)
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/tutedude-ec2/backend
ExecStart=/home/ubuntu/tutedude-ec2/backend/venv/bin/python app.py
Restart=always
RestartSec=5
Environment=HOME="/home/ubuntu"
EnvironmentFile=/home/ubuntu/tutedude-ec2/backend/.env

[Install]
WantedBy=multi-user.target
